{
  "version": 2,
  "builds": [
      {
          "src": "index.js",
          "use": "@now/node-server"
      }
  ],
  "routes": [
      {
          "src": "/menuBreakfast",
          "dest": "index.js",
          "methods": ["GET"],
            "headers": 
              {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                  }
      },
      {
          "src": "/addProductBreakfast",
          "dest": "index.js",
          "methods": ["GET", "POST"],
          "headers": {
            "Access-Control-Allow-Origin": "*",
            "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE",
            "Access-Control-Allow-Headers": "Authorization, Content-Type, Accept"
        }
      },
      {
          "src": "/addProductBreakfast/(.*)",
          "dest": "index.js",
          "methods": ["GET", "PUT", "DELETE"],
          "headers": {
            "Access-Control-Allow-Origin": "*",
            "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE",
            "Access-Control-Allow-Headers": "Authorization, Content-Type, Accept"
        }
      },
      {
          "src": "/menuDinner",
          "dest": "index.js",
          "methods": ["GET"],
          "headers": {
            "Access-Control-Allow-Origin": "*",
            "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE",
            "Access-Control-Allow-Headers": "Authorization, Content-Type, Accept"
        }
  },
      {
          "src": "/addProductDinner",
          "dest": "index.js",
          "methods": ["GET", "POST"],
          "headers": {
            "Access-Control-Allow-Origin": "*",
            "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE",
            "Access-Control-Allow-Headers": "Authorization, Content-Type, Accept"
        }
      },
      {
          "src": "/addProductDinner/(.*)",
          "dest": "index.js",
          "methods": ["GET", "PUT", "DELETE"],
          "headers": {
            "Access-Control-Allow-Origin": "*",
            "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE",
            "Access-Control-Allow-Headers": "Authorization, Content-Type, Accept"
        }
      },
      {
          "src": "/orders",
          "dest": "index.js",
          "methods": ["GET", "POST"],
          "headers": {
            "Access-Control-Allow-Origin": "*",
            "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE",
            "Access-Control-Allow-Headers": "Authorization, Content-Type, Accept"
        }
      },
      {
          "src": "/orders/(.*)",
          "dest": "index.js",
          "methods": ["GET", "PUT", "DELETE"],
          "headers": {
            "Access-Control-Allow-Origin": "*",
            "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE",
            "Access-Control-Allow-Headers": "Authorization, Content-Type, Accept"
        }
      }
  ],
  "build": {
      "env": {
          "TOKEN": "@token",
          "MONGOURL": "@mongourl"
      }
  }
}